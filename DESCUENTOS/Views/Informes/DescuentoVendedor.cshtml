
@{
    ViewBag.Title = "Consolidado";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="row">
    <div class="col-md-12 ">
        <fieldset>
            <legend>
                <strong>Detalle de la Solicitud</strong>
            </legend>
            <div class="row">
                <div class="col-md-5">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <strong>Fecha Inicial</strong>
                            </span>
                        </div>
                        <input id="txtfecini" type="date" class="form-control" required>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <strong>Fecha Final</strong>
                            </span>
                        </div>
                        <input id="txtfecfin" type="date" class="form-control" required>
                    </div>
                </div>
                <div class="col-md-2">
                    <button id="btn-reptsolicitud" class="btn  btn-block btn-outline-info">Buscar</button>
                </div>
                <div class="col-md-12 mb-3">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Por  Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Detalle</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div id="div-grid-descuentos"></div>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div id="div-grid-detdescuentos"></div>
                        </div>
                    </div>

                </div>
            </div>
        </fieldset>
    </div>
</div>
@Html.Partial("~/Views/Shared/ViewMessages.cshtml")
<script src="~/JS/DescuentosVendedores.js"></script>

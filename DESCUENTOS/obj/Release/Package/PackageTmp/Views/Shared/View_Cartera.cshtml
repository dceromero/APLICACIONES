<script src="http://bendewey.com/code/scripts/jquery.formatCurrency.js"></script>
<fieldset>
    <legend>
        <strong>Datos Principales</strong>
    </legend>
    <div class="row" validarcampos="true">
        <div class="col-md-6">

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <strong>Tipo Solicitud</strong>
                    </span>
                </div>

                <select id="cmbtpsol" class="form-control" required>
                    <option value="-1">Seleccione</option>
                    <option value="1">Modificación Cupo de Cliente</option>
                    <option value="2">Extracupo Cliente</option>
                </select>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <strong>Codigo Responsable Pago</strong>
                    </span>
                </div>
                <input id="txtcodrespago" type="number" class="form-control" disabled>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <strong>Cupo Actual</strong>
                    </span>
                </div>
                <input id="txtcupoasig" type="text" class="form-control" disabled>
            </div>

            <div data-date class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <strong>Fecha Inicial</strong>
                    </span>
                </div>
                <input id="txtfecini" type="text" class="form-control" disabled>
            </div>

        </div>

        <div class="col-md-6">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">
                        <strong>Codigó SAP - Cliente </strong>
                    </span>
                </div>
                <input id="txtcliente" type="text" class="form-control" required>
                <input id="lblcliente" type="hidden" />
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <strong>Responsable de Pago</strong>
                    </span>
                </div>
                <input id="txtrespago" type="text" class="form-control" disabled>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <strong>Cupo Adicional</strong>
                    </span>
                </div>
                <input id="txtcuposol" type="text" class="form-control" required>
            </div>

            <div data-date class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <strong>Fecha Final</strong>
                    </span>
                </div>
                <input id="txtfecfin" type="date" class="form-control" required>
            </div>

        </div>
        <div class="col-md-12">
            <div class="card-footer text-center">
                <strong>Justificación : <label id="lblmot"></label></strong>
            </div>
            <textarea id="txtmot" class="form-control" required></textarea>
        </div>
    </div>
</fieldset>
